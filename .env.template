# MongoDB Atlas Configuration
# Replace these values with your actual MongoDB Atlas credentials

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard -> Connect -> Connect your application
# Format: mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/hr_management_db?retryWrites=true&w=majority

# Database name
MONGODB_DATABASE=hr_management_db

# Atlas cluster details (optional, for reference)
ATLAS_CLUSTER_NAME=your_cluster_name
ATLAS_DATABASE_USER=your_username
ATLAS_DATABASE_PASSWORD=your_password

# Application Security
SECRET_KEY=your_secret_key_for_production

# Development Settings
DEBUG_MODE=True
